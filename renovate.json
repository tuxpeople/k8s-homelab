
{
  "enabled": true,
  "timezone": "Europe/Zurich",
  "semanticCommits": "enabled",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "commitBody": "Signed-off-by: Thomas Deutsch <tuxpeople@users.noreply.github.com>",
  "assignees": ["@tuxpeople"],
  "helm-values": {"fileMatch": ["ressources/.+\\.yaml$"]},
  "kubernetes": {
    "fileMatch": ["ressources/.+\\.yaml$"],
    "ignorePaths": [
      "cluster/base/"
    ]
  },
  "helm-values": {
    "fileMatch": ["ressources/.+\\.yaml$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["ressources/.+\\.yaml$"],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*)\n"
      ],
      "datasourceTemplate": "helm"
    }
  ],
  "packageRules": [
    {
      "addLabels": ["renovate/image-release"],
      "matchUpdateTypes": ["docker"]
    },
    {
      "addLabels": ["renovate/github-release"],
      "matchUpdateTypes": ["github-releases"]
    },
    {
      "addLabels": ["renovate/helm-release"],
      "matchUpdateTypes": ["helm"]
    },
    {
      "addLabels": ["dependency/major"],
      "matchUpdateTypes": ["major"]
    },
    {
      "addLabels": ["dependency/minor"],
      "matchUpdateTypes": ["minor"]
    },
    {
      "addLabels": ["dependency/patch"],
      "matchUpdateTypes": ["patch"]
    }
  ]
}
