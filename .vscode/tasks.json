{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run pre-commit on current file",
            "type": "shell",
            "command": "pre-commit",
            "args": [
                "run",
                "--files",
                "${file}"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run yamllint on current file",
            "type": "shell",
            "command": "yamllint",
            "args": [
                "-c",
                ".yamllint",
                "${file}"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run all pre-commit hooks",
            "type": "shell",
            "command": "pre-commit",
            "args": [
                "run",
                "--all-files"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Validate YAML syntax",
            "type": "shell",
            "command": "yq",
            "args": [
                "eval",
                ".",
                "${file}"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run task validation",
            "type": "shell",
            "command": "task",
            "args": [
                "validate"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
