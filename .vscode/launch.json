{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test YAML with yamllint",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/yamllint",
            "args": [
                "-c",
                "${workspaceFolder}/.yamllint",
                "${file}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
